	<% end %>
</div>

	<div id="container" class="js-masonry" data-masonry-options='{ "columnWidth": 2, "itemSelector": ".item" }'>
		<%= render @bookmarks %>
	</div>
		
<div>
<hr/>
	<% #if current_user %>
	<%= render partial: 'form', locals: { bookmark: Bookmark.new } %>
	<% #end %>
</div>