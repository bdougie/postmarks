<%= form_for bookmark do |f| %>

  <form role="form">
    <div class="form-group">
      <%= f.label :title %>
      <div class="controls">
        <%= f.text_field :title, placeholder: "Every bookmark needs a name", class: 'form-control' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body %>
      <div class="controls">
        <%= f.text_field :body, placeholder: "Briefly describe the bookmark here", class: 'form-control' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tags %>
      <div class="controls">
        <%= f.text_field :tags, placeholder: "Label this bookmark with a few tags", class: 'form-control' %>
    </div>
    </br>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Save", class: 'btn-primary' %>
      </div>
    </div>
  </form>

<% end %>
